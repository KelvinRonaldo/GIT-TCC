<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_txt_escolha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="176dp"
            android:text="O que você \n gostaria de fazer?"
            android:textAlignment="center"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_pro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="5dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt_escolha"
            app:srcCompat="@drawable/pro" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_pro"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt_escolha">

            <Button
                android:id="@+id/linha"
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/tv_titulo_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="Profissional"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="25dp"
                android:textSize="16dp"
                android:text="Você poderá cadastrar seus serviços e ser contratado pelos usuários da plataforma" />

            <ImageView
                android:id="@+id/iv_next_pro"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="250dp"
                app:srcCompat="@drawable/ic_next" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_cliente"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_pro">

            <Button
                android:id="@+id/linha2"
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/tv_titulo_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="Cliente"
                android:textSize="26dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_desc_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="25dp"
                android:textSize="16dp"
                android:text="Você poderá encontrar o profissional ideal para o serviço que precisar" />

            <ImageView
                android:id="@+id/iv_next_cliente"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="250dp"
                app:srcCompat="@drawable/ic_next" />

        </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/iv_cliente"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="100dp"

            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.553"
            app:layout_constraintStart_toEndOf="@+id/cv_cliente"
            app:layout_constraintTop_toBottomOf="@+id/cv_pro"
            app:srcCompat="@drawable/user" />




    </android.support.constraint.ConstraintLayout>
</ScrollView>